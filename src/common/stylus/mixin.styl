border-1px($color)
  position relative
  &:after
    position absolute
    bottom 0
    content ""
    display block
    width 100%
    height 1px
    background $color

bg-image($url)
  background-image url($url+"@2x.png")
  @media(-webkit-min-device-pixel-ratio: 3) ,(min-device-pixel-ratio: 3)
    background-image url($url+"@3x.png")
